  <div class="container">
    <div class="row ">
      {{#each products}}
        <div class="col-md-3 mx-4 pt-4">
          <div class="card" style="width: 18rem;">
            <img src="/product-images/{{this._id}}.jpg" class="card-img-top" alt="..." />
            <div class="card-body">
              <h5 class="card-title">{{this.Item}}</h5>
              <p class="card-text">{{this.Description}}</p>
              <p class="card-text">{{this.Price}}</p>
              <a href="/add-to-cart/{{this._id}}" class="btn btn-primary">Add to cart</a>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</section>