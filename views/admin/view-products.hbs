<section>
    <div class="container mt-4">
        <div class="row">
            <a href="/admin/add-products" class="btn btn-success ml-auto">Add products</a>
        </div>
        <table class="table table-striped mt-5">
  <thead>
    <tr>
      <th scope="col">No.</th>
      <th scope="col">Item</th>
      <th scope="col">Description</th>
      <th scope="col">Price</th>
      <th scope="col">Image</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  {{#each products}}
  <tbody>
    <tr>
      <th scope="row">{{@index}}</th>
      <td>{{this.Item}}</td>
      <td>{{this.Description}}</td>
      <td>{{this.Price}}</td>
      <td><img style="width: 50px;height: 50px;" src="/product-images/{{this._id}}.jpg" alt="pic"></td>
      <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a> </td>
      <td> <a href="/admin/delete-product/{{this._id}}"class="btn btn-danger" onclick="return confirm('Are you want to delete {{this.Item}}?')">Delete</a></td>
       
     
      
    </tr>
   {{/each}}
  </tbody>
</table>
    </div>
</section>